.form {
  display: flex;
  flex-direction: row;
  margin-right: 100px;

  & .suggestions-container {
    background-color: red;
  }
}

.input {
  display: inline-block;
  padding-left: 22px;
  box-sizing: border-box;
  width: 300px;
  height: 60px;
  font-size: var(--font-size_big);
}

.input:focus {
  border-color: var(--color_active);
  outline: none;
}

.submit {
  position: relative;
  display: inline-block;
  margin: 0;
  margin-left: 6px;
  padding: 0;
  width: 60px;
  height: 60px;
  border: 0;
  outline: none;
  font-size: 0;
  background-color: #fff;
}

.submit:hover {
  cursor: pointer;
}

.submit:hover .button,
.submit:focus .button {
  border-color: var(--color_active);
}

.button {
  position: relative;
  display: inline-block;

  cursor: pointer;
  width: 60px;
  height: 60px;
}

.button:before, .button:after {
  position: absolute;
  z-index: 10;
  background-color: var(--color_main);
  content: ' ';
}


.button:hover:before,
.button:hover:after {
  background-color: var(--color_active);
}

/* выравниваем по центру кнопки 60 на 60*/
.button:before {
  top: calc(0px + 17px);
  left: calc(11px + 17px);
  width: 3px;
  height: 25px;
}
.button:after {
  top: calc(11px + 17px);
  left: calc(0px + 17px);
  width: 25px;
  height: 3px;
}
