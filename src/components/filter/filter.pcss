.filter {
  width: 230px;
}

.filter h2 {
  font-size: var(--font-size_title);
  font-weight: normal;
  text-align: left;
}

.filter-wrapper {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.thumb:focus {
  outline-color: pink;
}

.thumb {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid white;
}
